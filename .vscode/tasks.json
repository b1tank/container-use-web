{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "start frontend dev server",
            "type": "shell",
            "command": "pnpm run dev",
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            },
            "isBackground": true,
            "group": "build",
            "problemMatcher": {
                "owner": "vite",
                "pattern": {
                    "regexp": ".*"
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".*",
                    "endsPattern": ".*Local:.*http://localhost:[0-9]+.*"
                }
            }
        }
    ]
}
