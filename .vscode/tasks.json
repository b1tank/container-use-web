{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "free port 8000",
            "type": "shell",
            "command": "./scripts/free_port.sh 8000",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "isBackground": true,
            "group": "build",
            "problemMatcher": {
                "pattern": {
                    "regexp": "^(❌|✅)\\s+(.*)$",
                    "message": 2
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^🔍\\s+Checking for processes listening on port.*",
                    "endsPattern": "^(✅\\s+No processes found.*|🎉\\s+Port.*is now free!|❌\\s+Failed to kill.*)"
                }
            }
        }
    ]
}
