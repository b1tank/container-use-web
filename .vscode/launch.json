{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "backend",
            "request": "launch",
            "runtimeArgs": [
                "run",
                "dev"
            ],
            "cwd": "${workspaceFolder}/backend",
            "runtimeExecutable": "pnpm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        {
            "name": "frontend",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:5173?folder=/Users/b1tank/hello",
            "webRoot": "${workspaceFolder}/frontend",
            "preLaunchTask": "start frontend dev server"
        }
    ]
}
