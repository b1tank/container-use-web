{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "backend",
            "request": "launch",
            "runtimeArgs": [
                "run",
                "dev"
            ],
            "cwd": "${workspaceFolder}/backend",
            "runtimeExecutable": "pnpm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        {
            "name": "frontend",
            "type": "node-terminal",
            "request": "launch",
            "command": "pnpm run dev",
            "cwd": "${workspaceFolder}/frontend"
        },
        {
            "name": "frontend: client",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}/frontend",
        },
    ]
}
