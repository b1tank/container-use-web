{
    "name": "container-use-ui",
    "version": "0.1.0",
    "description": "A CLI tool for monitoring container-use with a web UI",
    "type": "module",
    "bin": {
        "container-use-ui": "./bin/cli.js",
        "cui": "./bin/cli.js"
    },
    "workspaces": [
        "frontend",
        "backend"
    ],
    "scripts": {
        "build": "./scripts/build.sh",
        "build:frontend": "cd frontend && pnpm run build",
        "build:backend": "cd backend && pnpm run build",
        "dev": "concurrently \"cd backend && pnpm run dev\" \"cd frontend && pnpm run dev\"",
        "test": "pnpm run test:cli",
        "test:cli": "./scripts/test-cli.sh",
        "postinstall": "echo 'Container Use UI installed successfully!'",
        "prepack": "./scripts/build.sh"
    },
    "keywords": [
        "cli",
        "container",
        "docker",
        "development",
        "ui",
        "dashboard"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/b1tank/container-use-ui.git"
    },
    "bugs": {
        "url": "https://github.com/b1tank/container-use-ui/issues"
    },
    "homepage": "https://github.com/b1tank/container-use-ui#readme",
    "author": "b1tank",
    "license": "MIT",
    "files": [
        "bin/",
        "backend/dist/",
        "frontend/dist/",
        "README.md",
        "LICENSE"
    ],
    "dependencies": {
        "commander": "^14.0.0",
        "open": "^10.1.0"
    },
    "devDependencies": {
        "concurrently": "^9.1.0",
        "@types/node": "^20.11.17",
        "typescript": "^5.8.3"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "preferGlobal": true
}
