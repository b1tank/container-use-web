{
    "name": "container-use-ui",
    "version": "0.1.0",
    "description": "A CLI tool for monitoring container-use with a web UI",
    "type": "module",
    "bin": {
        "container-use-ui": "./bin/cli.js",
        "cui": "./bin/cli.js"
    },
    "scripts": {
        "build": "./scripts/build.sh",
        "build:cli": "node build-cli.mjs",
        "build:frontend": "cd frontend && pnpm run build",
        "build:backend": "cd backend && pnpm run build",
        "clean:build": "rm -rf frontend/dist backend/dist bin",
        "clean:deps": "rm -rf node_modules frontend/node_modules backend/node_modules",
        "dev": "concurrently \"cd backend && pnpm run dev\" \"cd frontend && pnpm run dev\"",
        "test": "pnpm run test:cli",
        "test:cli": "./scripts/test-cli.sh",
        "test:package": "./scripts/test-package.sh",
        "test:package:full": "./scripts/test-package.sh --full",
        "pre-publish": "./scripts/pre-publish.sh",
        "publish:dry": "./scripts/publish.sh --dry-run",
        "publish:beta": "./scripts/publish.sh --tag=beta",
        "publish:patch": "./scripts/publish.sh --bump=patch",
        "publish:minor": "./scripts/publish.sh --bump=minor",
        "publish:major": "./scripts/publish.sh --bump=major",
        "postinstall": "echo 'Container Use UI installed successfully!'",
        "prepack": "./scripts/build.sh"
    },
    "keywords": [
        "cli",
        "container",
        "docker",
        "development",
        "ui",
        "dashboard"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/b1tank/container-use-ui.git"
    },
    "bugs": {
        "url": "https://github.com/b1tank/container-use-ui/issues"
    },
    "homepage": "https://github.com/b1tank/container-use-ui#readme",
    "author": "b1tank",
    "license": "MIT",
    "files": [
        "bin/",
        "backend/dist/",
        "frontend/dist/",
        "README.md",
        "LICENSE"
    ],
    "dependencies": {
        "commander": "^14.0.0",
        "open": "^10.1.0"
    },
    "devDependencies": {
        "@types/node": "^20.11.17",
        "concurrently": "^9.1.0",
        "esbuild": "^0.25.8",
        "typescript": "^5.8.3"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "pnpm": {
        "onlyBuiltDependencies": [
            "@swc/core",
            "@tailwindcss/oxide",
            "esbuild",
            "node-pty"
        ]
    },
    "preferGlobal": true
}
